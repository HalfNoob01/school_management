model Class {
    id       Int    @id @default(autoincrement())
    name     String @unique
    capacity Int

    supervisorId String
    supervisor   Teacher        @relation(fields: [supervisorId], references: [id])
    lessons      Lesson[]
    student      Student[]
    gradeId      Int
    grade        Grade          @relation(fields: [gradeId], references: [id])
    announcement Announcement[]
    events       Event[]
}
